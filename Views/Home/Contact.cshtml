@model CarPriceComparison.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact Page";
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
}
<h2>Contact Me</h2>
<form method="post">
    <span asp-validation-summary="ModelOnly"></span>
    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="EMail">Email</label>
        <input asp-for="EMail" type="email"/>
        <span asp-validation-for="EMail"></span>
    </div>
    <div>
        <label asp-for="Message">Message</label>
        <textarea cols="40" rows="5" asp-for="Message"></textarea>
        <span asp-validation-for="Message"></span>
    </div>
    <div>
        <input type="submit" value="Send Message"/>
    </div>
</form>
<script type="text/javascript" src="~/js/site.js"></script>