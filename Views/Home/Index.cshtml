@model CarPriceComparison.ViewModels.MakeAndModelVM
<!DOCTYPE <!DOCTYPE html>

@section scripts{
    <script type="text/javascript" src="~/js/site.js"></script>
}

<h2 class="col-md-8 offset-md-2">Search Kamloops for sold vehicles</h2>
    <div class="row">
        <form method="post" class="col-md-8 offset-md-2">
            <div class="form-row">
                <div class="col">
                    @if(ViewBag.VehicleMakes != null)
                    {
                        @Html.DropDownList("VehMakesDD", ViewBag.VehicleMakes as SelectList,
                                            "-- Select Make --", 
                                            new { htmlAttributes = new { @class = "form-control" } })
                    }
                </div> 

                <div class="col">
                    @Html.DropDownList("VehModelsDD", new SelectList(""),
                                            "-- Select Model --", 
                                            new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col">
                    <input class="btn btn-success" type="submit" value="Search Kamloops"/>
                </div>
            </div>
        </form>
    </div>

